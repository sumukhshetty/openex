{
  "rules": {
    "buyorders": {
      ".read": "auth != null",
      "$orderId": {
        ".write": "auth != null",
        "status": {
          ".validate": "(data.val() == null && newData.val() == 'Initiated') || (data.val() == 'In Escrow' && newData.val() == 'Payment Confirmed' && auth.uid == data.parent().child('buyerUid').val())"
        }
      }
    },
    "chatrooms": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "chats": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "purchaserequests": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "sellorders": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "users": {
      ".read": "auth != null",
      ".write": "auth != null"
    }
  }
}
